{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "mocha",
      "chai",
      "jsdom"
    ]
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "server/**/*",
    "shared/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "client"
  ]
}
